<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="netty.properties" />

    <context:component-scan base-package="StartNetty.SpringNettyDemo.server" />

    <import resource="codec.xml"/>

    <bean id="server" class="StartNetty.SpringNettyDemo.server.Server">
        <constructor-arg value="${server.port}" />
    </bean>

    <bean id="loginAuthResHandler" class="StartNetty.SpringNettyDemo.server.LoginAuthResHandler" scope="prototype"/>

</beans>